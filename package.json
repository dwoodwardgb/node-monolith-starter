{
  "name": "node-on-rails",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "scripts": {
    "_clean": "rimraf dist",
    "_tsc:watch": "tsc -w",
    "_nodemon": "nodemon -q -w dist -r dotenv/config --optimize_for_size --max_old_space_size=460 --gc_interval=100 dist/main",
    "build": "yarn _clean && tsc",
    "dev": "yarn build && NODE_ENV=development concurrently -k --raw \"yarn _tsc:watch\" \"yarn _nodemon\"",
    "start": "node -r dotenv/config --optimize_for_size --max_old_space_size=460 --gc_interval=100 dist/main",
    "typeorm": "yarn build && typeorm -f dist/db/ormconfig.js"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  }
}
