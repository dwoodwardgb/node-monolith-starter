{
  "name": "node-monolith-starter",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "_build:js": "rimraf dist && tsc",
    "_watch:js": "tsc -w",
    "_nodemon": "nodemon -q -w dist -r dotenv/config --optimize_for_size --max_old_space_size=460 --gc_interval=100 dist/main",
    "build": "yarn run _build:js",
    "dev": "concurrently -k --raw \"yarn _watch:js\" \"yarn _nodemon\"",
    "start": "node -r dotenv/config dist/main.js"
  },
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "@sinclair/typebox": "^0.23.2",
    "awilix": "^6.0.0",
    "dotenv": "^10.0.0",
    "escape-html": "^1.0.3",
    "fastify": "^3.21.6",
    "fastify-blipp": "^3.1.0",
    "fastify-plugin": "^3.0.0",
    "fastify-secure-session": "^3.0.0",
    "jwt-decode": "^3.1.2",
    "qs": "^6.10.1",
    "simple-oauth2": "^4.3.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.1",
    "@types/escape-html": "^1.0.1",
    "@types/node": "^14.0.0",
    "@types/qs": "^6.9.7",
    "@types/simple-oauth2": "^4.1.1",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.13",
    "prisma": "3.7.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
